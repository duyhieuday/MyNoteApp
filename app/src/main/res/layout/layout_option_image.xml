<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutOptionImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="12dp"
    android:background="@drawable/background_dialog">

    <LinearLayout
        android:id="@+id/layoutSelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textSelectImage"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Select Image"
            android:textSize="24sp"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageSelectImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="12dp"
            android:src="@drawable/ic_image"
            android:tint="@color/colorWhite"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTakePhoto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutSelectImage"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Take photo"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_camera"
            android:tint="@color/colorWhite"
            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>